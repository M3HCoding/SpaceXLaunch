<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/surahCardView"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input_frame_1"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/tvBookMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/bookmark_24px"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:layout_toStartOf="@id/tvBookMark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMissionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/color_black_text_title" />

            <TextView
                android:id="@+id/tvLaunchYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textColor="@color/color_text_description"
                android:layout_marginTop="@dimen/_4sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_dotted_line_one"/>

            <TextView
                android:id="@+id/tvRocketName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textColor="@color/color_text_description"
                android:layout_marginTop="@dimen/_4sdp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>